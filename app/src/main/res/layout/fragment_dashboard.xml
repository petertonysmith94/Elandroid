<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/area_tabs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/add_new_page_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/add_page_horizontal_margin"
            android:layout_marginRight="@dimen/add_page_horizontal_margin"
            android:layout_gravity="center"
            android:src="@drawable/add_tab_30dp"
            android:tint="@color/colorAccent"
            android:background="@color/colorBackground"/>

    </LinearLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/dashboard_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>