<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_item_padding">

    <TextView
        android:id="@+id/list_item_formatted_parameter_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="parameter title"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/list_item_formatted_packet_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="3.1"/>

    <TextView
        android:id="@+id/list_item_formatted_parameter_units"
        android:layout_marginLeft="@dimen/list_item_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Units"/>

</LinearLayout>