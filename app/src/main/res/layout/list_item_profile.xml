<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:weightSum="3">

    <RelativeLayout
        android:id="@+id/list_item_profile_image_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_item_profile_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_active_glow_100dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_car_black_100dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/list_item_profile_name"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:text="Profile name"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/list_item_margin_top"
            style="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"/>

        <TextView
            android:id="@+id/list_item_profile_make_model"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:text="Make, Model S2"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/list_item_margin_top"
            style="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"/>

        <TextView
            android:id="@+id/list_item_profile_registration"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:text="Registration"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/list_item_margin_top"
            style="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:visibility="gone">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>